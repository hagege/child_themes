				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"link": {
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--contrast-2)"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--base-2)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--lexend)"
