		"color": {
			"palette": [
				{
					"color": "#911436",
					"name": "dunkelrot",
					"slug": "custom-dunkelrot"
				},
				{
					"color": "#ffffff",
					"name": "weiss",
					"slug": "custom-weiss"
				},
				{
					"color": "#fdfce7",
					"name": "hellgelb",
					"slug": "custom-hellgelb"
				},
				{
					"color": "#000000",
					"name": "schwarz",
					"slug": "custom-schwarz"
				},
				{
					"color": "#0e8273",
					"name": "mittelgrün",
					"slug": "custom-mittelgr-n"
				},
				{
					"color": "#f6c356",
					"name": "gelb",
					"slug": "custom-gelb"
				}
			]
